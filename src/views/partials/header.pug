nav.navbar.navbar-default
  .container-fluid.clearfix
    .navbar-header
      a.navbar-brand(href='/') WebSiteName
    if (title != 'Login' && title != 'Register' )
      ul.nav.navbar-nav
        li(class=title == "Home" ? "active" : "")
          a(href='/home') Home
        li(class=title == "About" ? "active" : "")
          a(href='/about') About
        li(class=title == "Contact" ? "active" : "")
          a(href='/contact') Contact
        li(class=title == "Support" ? "active" : "")
          a(href='#') Support
      form.pull-right(method='POST', action='/sign-out')
        input.sign-out.btn.btn-primary(type='submit', value='Sign out')
