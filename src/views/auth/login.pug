extends ../index.pug

block content
	if errors  
		ul.alert.alert-danger
			for error in errors
				li!= error.msg || error

	.wrapper
		form.form-signin(action='/login', method='POST')
			h2.form-signin-heading Please login
			input.form-control(type='text', name='email', placeholder='Email Address', required='', autofocus='')
			input.form-control(type='password', name='password', placeholder='Password', required='')
			label.checkbox
				input#rememberMe(type='checkbox', value='remember', name='rememberMe')
				|  Remember me
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
			a.btn.btn-lg.btn-info.btn-block(href='register') Register


